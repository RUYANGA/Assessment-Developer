# Sample environment variables for Eskalate News API
# Copy this file to `.env` and fill in real secrets before running.

# Postgres connection (required)
# Example: postgresql://USER:PASS@HOST:5432/DBNAME?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?schema=public"

# Redis connection (used by BullMQ and guest dedupe)
# You can use REDIS_URL OR REDIS_HOST + REDIS_PORT
REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# App settings
PORT=3003
NODE_ENV=development
LOG_LEVEL=info

# JWT secret (replace with a secure random string in production)
JWT_SECRET=change-this-to-a-secure-random-string

# Disable BullMQ / analytics queue (set to 'true' to disable)
DISABLE_BULL=false
